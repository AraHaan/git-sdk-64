[Trigger]
Type = Path
Operation = Install
Operation = Upgrade
Target = usr/share/info/*

[Action]
Description = Updating the info directory file...
When = PostTransaction
Exec = /usr/bin/env CHERE_INVOKING=1 MSYSTEM=MSYS /usr/bin/sh -lc 'while read -r f; do install-info "$f" /usr/share/info/dir 2> /dev/null; done'
NeedsTargets
