[Trigger]
Type = Path
Operation = Remove
Target = usr/share/info/*

[Action]
Description = Removing old entries from the info directory file...
When = PreTransaction
Exec = /usr/bin/env CHERE_INVOKING=1 MSYSTEM=MSYS /usr/bin/sh -lc 'while read -r f; do install-info --delete "$f" /usr/share/info/dir 2> /dev/null; done'
NeedsTargets
